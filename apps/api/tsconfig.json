{
  "compilerOptions": {
    "target": "ES2022",
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "api/*": [
        "./src/*"
      ],
      "@repo/database": [
        "../../packages/database/src"
      ]
    },
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": [
      "node"
    ],
    "strict": false,
    "noImplicitAny": false,
    "outDir": "./dist",
    "verbatimModuleSyntax": false,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}